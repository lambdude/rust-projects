# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8

# 4 space indentation
[*.rs]
indent_style = space
indent_size = 4

# Tab indentation (no size specified)
[Justfile]
indent_style = tab

# 2 space indentation
# [*.json]
# indent_style = space
# indent_size = 2
